                              Official SCAR Include
                           DepositBox Function Testing
--------------------------------------------------------------------------------
 * procedure TestDepositBoxFunctions;                   
 * Instructions:
                1. Set the constants
                2. Run Test!
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=}

{$DEFINE RS2}
{$DEFINE SMART}
{$I ../../OSI.scar}

const
  RS2_Username = 'Test'; // Set these constants before running!
  RS2_Password = 'Test';
  RS2_Member = False;    // Use Member's world?
  SMART_World = 11;      // What world do you want to go to?

// Do not include this file. Run it!

procedure SetupPlayers;                                  
begin 
  SetLength(Players, 1);
  with Players[0] do
    begin
      Login := RS2_Username;
      Pass  := RS2_Password;
      Member := RS2_Member;  
      WorldInfo:= [RS2_Member, SMART_World];
      Active := True;
    end;                                     
  SetupOSI;
  Login;       
  wait(5000);
end;

procedure TestDepositBoxFunctions;
begin
  if not LoggedIn then Exit;
  if GetDepositSlotIndex(1, 1) = 0 then WriteLn('GetDepositSlotIndex: Works!') else WriteLn('GetDepositSlotIndex: Failed!');
  if GetDepositItemBounds(0) <> Box(0, 0, 0, 0) then WriteLn('GetDepositItemBounds: Works!') else WriteLn('GetDepositItemBounds: Failed!');
  if CoordsToDepositItemSlot(Point(MDI1, MDI2)) = 0 then WriteLn('CoordsToDepositItemSlot: Works!') else WriteLn('CoordsToDepositItemSlot: Failed!');
  if DepositItemExists(0) then WriteLn('DepositItemExists: Found Item in Slot(0)!') else WriteLn('DepositItemExists: Slot(0) Empty or Failed!');
  WriteLn('DepositCount: Result: ' + IntToStr(DepositCount));
  if DepositFull then WriteLn('DepositFull: Full!') else WriteLn('DepositFull: Not Full or Failed!');
  if DepositEmpty then WriteLn('DepositEmpty: Empty!') else WriteLn('DepositEmpty: Not Empty or Failed!');
  if MouseDepositItem(0, ClickLeft) then WriteLn('MouseDepositItem: Clicked Item in Slot(0)!') else WriteLn('MouseDepositItem: Didn''t Click Item(0) or Failed!');  
  // FindDepositItemsDTM
  // CountDepositItemsDTM     
  // FindDepositItemsBMP     
  // CountDepositItemsBMP
end;

begin
  SetupPlayers;               
  ClearDebug;    
  MoveMouse(0, 0);
  TestDepositBoxFunctions;
end.